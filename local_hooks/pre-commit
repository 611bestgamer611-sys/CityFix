#!/bin/bash

# CityFix Pre-Commit Hook
# This hook runs before committing changes

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Check if there are any staged files
if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No files staged for commit${NC}"
    exit 0
fi

# Frontend checks
FRONTEND_FILES=$(echo "$STAGED_FILES" | grep "src/CityFixUI" | grep -E "\.(ts|tsx|js|jsx)$" || true)

if [ -n "$FRONTEND_FILES" ]; then
    echo "üì¶ Checking frontend files..."
    
    cd src/CityFixUI
    
    # Check for console.log statements
    echo "  Checking for console.log statements..."
    CONSOLE_LOGS=$(echo "$FRONTEND_FILES" | xargs grep -n "console\\.log" || true)
    if [ -n "$CONSOLE_LOGS" ]; then
        echo -e "${RED}‚ùå Found console.log statements:${NC}"
        echo "$CONSOLE_LOGS"
        echo -e "${YELLOW}Please remove console.log statements before committing${NC}"
        exit 1
    fi
    
    # Run ESLint on staged files
    echo "  Running ESLint..."
    if command -v npm &> /dev/null; then
        if ! npm run lint -- --fix $(echo "$FRONTEND_FILES" | tr '\n' ' ') 2>&1; then
            echo -e "${RED}‚ùå ESLint found errors${NC}"
            echo -e "${YELLOW}Please fix linting errors before committing${NC}"
            exit 1
        fi
    fi
    
    # Run Prettier
    echo "  Running Prettier..."
    if command -v npm &> /dev/null; then
        if command -v prettier &> /dev/null; then
            echo "$FRONTEND_FILES" | xargs prettier --write
            echo "$FRONTEND_FILES" | xargs git add
        fi
    fi
    
    cd ../..
fi

# Backend Python checks
PYTHON_FILES=$(echo "$STAGED_FILES" | grep -E "\.py$" || true)

if [ -n "$PYTHON_FILES" ]; then
    echo "üêç Checking Python files..."
    
    # Check for syntax errors
    echo "  Checking Python syntax..."
    for file in $PYTHON_FILES; do
        if ! python3 -m py_compile "$file" 2>/dev/null; then
            echo -e "${RED}‚ùå Syntax error in $file${NC}"
            exit 1
        fi
    done
    
    # Run black formatter if available
    if command -v black &> /dev/null; then
        echo "  Running Black formatter..."
        echo "$PYTHON_FILES" | xargs black --line-length 100
        echo "$PYTHON_FILES" | xargs git add
    fi
    
    # Run flake8 if available
    if command -v flake8 &> /dev/null; then
        echo "  Running Flake8..."
        if ! echo "$PYTHON_FILES" | xargs flake8 --max-line-length 100 --extend-ignore E203,W503; then
            echo -e "${RED}‚ùå Flake8 found issues${NC}"
            echo -e "${YELLOW}Please fix code style issues before committing${NC}"
            exit 1
        fi
    fi
fi

# Check for large files
echo "üìè Checking for large files..."
LARGE_FILES=$(echo "$STAGED_FILES" | while read file; do
    if [ -f "$file" ]; then
        size=$(du -k "$file" | cut -f1)
        if [ $size -gt 5120 ]; then  # 5MB
            echo "$file ($size KB)"
        fi
    fi
done)

if [ -n "$LARGE_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: Large files detected:${NC}"
    echo "$LARGE_FILES"
    echo -e "${YELLOW}Consider using Git LFS for large files${NC}"
fi

# Check for sensitive data
echo "üîí Checking for sensitive data..."
SENSITIVE_PATTERNS=(
    "password\s*=\s*['\"].*['\"]"
    "api[_-]?key\s*=\s*['\"].*['\"]"
    "secret\s*=\s*['\"].*['\"]"
    "token\s*=\s*['\"].*['\"]"
    "aws_access_key"
    "private[_-]?key"
)

for pattern in "${SENSITIVE_PATTERNS[@]}"; do
    MATCHES=$(echo "$STAGED_FILES" | xargs grep -iE "$pattern" || true)
    if [ -n "$MATCHES" ]; then
        echo -e "${RED}‚ùå Potential sensitive data found:${NC}"
        echo "$MATCHES"
        echo -e "${YELLOW}Please remove sensitive data before committing${NC}"
        exit 1
    fi
done

echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0
