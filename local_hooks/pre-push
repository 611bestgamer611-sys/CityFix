#!/bin/bash

# CityFix Pre-Push Hook
# This hook runs before pushing changes to remote

set -e

echo "ğŸš€ Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get current branch
BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ“Œ Current branch: $BRANCH"

# Prevent pushing to main/master without review
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
    echo -e "${YELLOW}âš ï¸  Warning: You are about to push to $BRANCH${NC}"
    read -p "Are you sure you want to push to $BRANCH? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}âŒ Push aborted${NC}"
        exit 1
    fi
fi

# Frontend tests
if [ -d "src/CityFixUI" ]; then
    echo "ğŸ§ª Running frontend tests..."
    cd src/CityFixUI
    
    if [ -f "package.json" ]; then
        # Check if test script exists
        if grep -q "\"test\"" package.json; then
            if ! npm test -- --run 2>&1; then
                echo -e "${YELLOW}âš ï¸  Frontend tests not available or failed${NC}"
            fi
        fi
        
        # Build check
        echo "ğŸ—ï¸  Checking frontend build..."
        if ! npm run build 2>&1; then
            echo -e "${RED}âŒ Frontend build failed${NC}"
            exit 1
        fi
        
        # TypeScript check
        echo "ğŸ“ Running TypeScript checks..."
        if command -v tsc &> /dev/null; then
            if ! npx tsc --noEmit 2>&1; then
                echo -e "${RED}âŒ TypeScript errors found${NC}"
                exit 1
            fi
        fi
    fi
    
    cd ../..
fi

# Backend tests for each service
SERVICES=("AuthService" "AdminService" "TicketService" "MediaService" "GeoService" "NotificationService" "Orchestrator")

echo "ğŸ Running backend tests..."
for service in "${SERVICES[@]}"; do
    SERVICE_DIR="src/$service"
    if [ -d "$SERVICE_DIR" ]; then
        echo "  Testing $service..."
        cd "$SERVICE_DIR"
        
        if [ -f "requirements.txt" ]; then
            # Check if pytest is available
            if command -v pytest &> /dev/null; then
                if [ -d "tests" ] || ls test_*.py 1> /dev/null 2>&1; then
                    if ! pytest --maxfail=1 -v 2>&1; then
                        echo -e "${YELLOW}âš ï¸  Tests not available or failed for $service${NC}"
                    fi
                fi
            fi
            
            # Python import check
            if ! python3 -c "import main" 2>/dev/null; then
                echo -e "${YELLOW}âš ï¸  Warning: Could not import main.py for $service${NC}"
            fi
        fi
        
        cd ../..
    fi
done

# Docker build check (optional, can be slow)
if [ "$CI" != "true" ]; then
    read -p "Do you want to verify Docker builds? (y/N) " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        echo "ğŸ³ Checking Docker builds..."
        if command -v docker &> /dev/null; then
            if ! docker-compose build --quiet 2>&1; then
                echo -e "${RED}âŒ Docker build failed${NC}"
                exit 1
            fi
        fi
    fi
fi

# Check for uncommitted changes
if ! git diff-index --quiet HEAD --; then
    echo -e "${YELLOW}âš ï¸  Warning: You have uncommitted changes${NC}"
    git status --short
fi

# Integration tests (if available)
if [ -f "tests/integration_test.sh" ]; then
    echo "ğŸ”— Running integration tests..."
    if ! bash tests/integration_test.sh; then
        echo -e "${RED}âŒ Integration tests failed${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
echo "ğŸ‰ Ready to push to $BRANCH"
exit 0
