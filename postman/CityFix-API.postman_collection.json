{
  "info": {
    "name": "CityFix API",
    "description": "Complete API collection for CityFix municipal issue reporting platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    pm.environment.set('user_email', pm.request.body.raw.email);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"citizen@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"citizen\",\n  \"tenant_id\": \"municipality1\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('api_token', jsonData.access_token);",
                  "    pm.environment.set('user_id', jsonData.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"citizen@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Ticket Service",
      "item": [
        {
          "name": "Create Ticket",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('ticket_id', jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Buca pericolosa in Via Roma\",\n  \"description\": \"Buca profonda che danneggia le auto\",\n  \"category\": \"strade\",\n  \"location\": {\n    \"lat\": 41.9028,\n    \"lon\": 12.4964,\n    \"address\": \"Via Roma, 123\"\n  },\n  \"tenant_id\": \"municipality1\",\n  \"images\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/create",
              "host": ["{{base_url}}"],
              "path": ["tickets", "create"]
            }
          }
        },
        {
          "name": "List Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tickets/list?tenant_id=municipality1&status=pending",
              "host": ["{{base_url}}"],
              "path": ["tickets", "list"],
              "query": [
                {
                  "key": "tenant_id",
                  "value": "municipality1"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Ticket by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}"]
            }
          }
        },
        {
          "name": "Update Ticket Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "status"]
            }
          }
        },
        {
          "name": "Assign Ticket",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assigned_to\": \"{{user_id}}\",\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/assign",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "assign"]
            }
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"message\": \"Lavori in corso\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/comments",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "comments"]
            }
          }
        },
        {
          "name": "Add Feedback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Ottimo lavoro!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/feedback",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "feedback"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Service",
      "item": [
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/stats",
              "host": ["{{base_url}}"],
              "path": ["admin", "stats"]
            }
          }
        },
        {
          "name": "List Municipalities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/municipalities",
              "host": ["{{base_url}}"],
              "path": ["admin", "municipalities"]
            }
          }
        },
        {
          "name": "Create Municipality",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Comune di Roma\",\n  \"location\": {\n    \"lat\": 41.9028,\n    \"lon\": 12.4964\n  },\n  \"admin_id\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/municipalities",
              "host": ["{{base_url}}"],
              "path": ["admin", "municipalities"]
            }
          }
        },
        {
          "name": "Get Municipality Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/municipalities/stats",
              "host": ["{{base_url}}"],
              "path": ["admin", "municipalities", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Media Service",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "ticket_id",
                  "value": "{{ticket_id}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/media/upload",
              "host": ["{{base_url}}"],
              "path": ["media", "upload"]
            }
          }
        },
        {
          "name": "Get File",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/media/file_id",
              "host": ["{{base_url}}"],
              "path": ["media", "file_id"]
            }
          }
        }
      ]
    },
    {
      "name": "Geo Service",
      "item": [
        {
          "name": "Geocode Address",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/geo/geocode?address=Via Roma, 123, Roma",
              "host": ["{{base_url}}"],
              "path": ["geo", "geocode"],
              "query": [
                {
                  "key": "address",
                  "value": "Via Roma, 123, Roma"
                }
              ]
            }
          }
        },
        {
          "name": "Reverse Geocode",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/geo/reverse?lat=41.9028&lon=12.4964",
              "host": ["{{base_url}}"],
              "path": ["geo", "reverse"],
              "query": [
                {
                  "key": "lat",
                  "value": "41.9028"
                },
                {
                  "key": "lon",
                  "value": "12.4964"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Notification Service",
      "item": [
        {
          "name": "Create Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"message\": \"Il tuo ticket Ã¨ stato preso in carico\",\n  \"type\": \"info\",\n  \"ticket_id\": \"{{ticket_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/notifications/create",
              "host": ["{{base_url}}"],
              "path": ["notifications", "create"]
            }
          }
        },
        {
          "name": "Get User Notifications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications/user/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["notifications", "user", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Mark as Read",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications/notification_id/read",
              "host": ["{{base_url}}"],
              "path": ["notifications", "notification_id", "read"]
            }
          }
        },
        {
          "name": "Delete Notification",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/notifications/notification_id",
              "host": ["{{base_url}}"],
              "path": ["notifications", "notification_id"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Orchestrator Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
